<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CalcuatorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        android:padding="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/clr_gray_100">

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="textEnd"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_value"/>

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/clr_text"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textIsSelectable="true"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/tv_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_red_200"
        android:background="@android:color/transparent"
        android:onClick="btnClearHandler"
        app:layout_constraintTop_toBottomOf="@+id/ll_show"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_brackets"
        app:layout_constraintBottom_toTopOf="@id/btn_seven"/>

    <Button
        android:id="@+id/btn_brackets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="()"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnBracketsHandler"
        app:layout_constraintTop_toBottomOf="@+id/ll_show"
        app:layout_constraintStart_toEndOf="@id/btn_clear"
        app:layout_constraintEnd_toStartOf="@id/btn_percent"
        app:layout_constraintBottom_toTopOf="@id/btn_eight"/>

    <Button
        android:id="@+id/btn_percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnOpsHandler"
        app:layout_constraintTop_toBottomOf="@+id/ll_show"
        app:layout_constraintStart_toEndOf="@id/btn_brackets"
        app:layout_constraintEnd_toStartOf="@id/btn_div"
        app:layout_constraintBottom_toTopOf="@id/btn_nine"/>

    <Button
        android:id="@+id/btn_div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnOpsHandler"
        app:layout_constraintTop_toBottomOf="@+id/ll_show"
        app:layout_constraintStart_toEndOf="@id/btn_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_prod"/>

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_eight"
        app:layout_constraintBottom_toTopOf="@id/btn_four"/>

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_brackets"
        app:layout_constraintStart_toEndOf="@id/btn_seven"
        app:layout_constraintEnd_toStartOf="@id/btn_nine"
        app:layout_constraintBottom_toTopOf="@id/btn_five"/>

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_percent"
        app:layout_constraintStart_toEndOf="@id/btn_eight"
        app:layout_constraintEnd_toStartOf="@id/btn_prod"
        app:layout_constraintBottom_toTopOf="@id/btn_six"/>

    <Button
        android:id="@+id/btn_prod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnOpsHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_div"
        app:layout_constraintStart_toEndOf="@id/btn_nine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_minus"/>

    <Button
        android:id="@+id/btn_four"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_seven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_five"
        app:layout_constraintBottom_toTopOf="@id/btn_one"/>

    <Button
        android:id="@+id/btn_five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_eight"
        app:layout_constraintStart_toEndOf="@id/btn_four"
        app:layout_constraintEnd_toStartOf="@id/btn_six"
        app:layout_constraintBottom_toTopOf="@id/btn_two"/>

    <Button
        android:id="@+id/btn_six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_nine"
        app:layout_constraintStart_toEndOf="@id/btn_five"
        app:layout_constraintEnd_toStartOf="@id/btn_minus"
        app:layout_constraintBottom_toTopOf="@id/btn_three"/>

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnOpsHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_prod"
        app:layout_constraintStart_toEndOf="@id/btn_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_plus"/>

    <Button
        android:id="@+id/btn_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_two"
        app:layout_constraintBottom_toTopOf="@id/btn_zero"/>

    <Button
        android:id="@+id/btn_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_five"
        app:layout_constraintStart_toEndOf="@id/btn_one"
        app:layout_constraintEnd_toStartOf="@id/btn_three"
        app:layout_constraintBottom_toTopOf="@id/btn_double_zero"/>

    <Button
        android:id="@+id/btn_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_six"
        app:layout_constraintStart_toEndOf="@id/btn_two"
        app:layout_constraintEnd_toStartOf="@id/btn_plus"
        app:layout_constraintBottom_toTopOf="@id/btn_dot"/>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnOpsHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_minus"
        app:layout_constraintStart_toEndOf="@id/btn_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_equal"/>

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_double_zero"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_double_zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="00"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_two"
        app:layout_constraintStart_toEndOf="@id/btn_zero"
        app:layout_constraintEnd_toStartOf="@id/btn_dot"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_gray_400"
        android:background="@android:color/transparent"
        android:onClick="btnNumHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_three"
        app:layout_constraintStart_toEndOf="@id/btn_double_zero"
        app:layout_constraintEnd_toStartOf="@id/btn_equal"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/clr_blue_100"
        android:background="@android:color/transparent"
        android:onClick="btnEqualHandler"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintStart_toEndOf="@id/btn_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>